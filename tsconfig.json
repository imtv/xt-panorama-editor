{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "@uiw/react-amap-types"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": true,
    "paths": {
      "@": [
        "src/*"
      ],
      "@/api/*": [
        "src/api/*"
      ],
      "@/mock/*": [
        "src/mock/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/layout": [
        "src/layout"
      ],
      "@/enum/*": [
        "src/enum/*"
      ],
      "@/generator/*": [
        "src/generator/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}